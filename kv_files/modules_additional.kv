
<MouseLeft>:
    FloatLayout:
        size: root.size
        pos: root.pos

        BackgroundMouse:
            pos_hint: {'center_x': 0.1, 'center_y': 0.2}

        Y_slider:
            id: y_mouse_slider
            pos_hint: {'center_x': 0.03, 'center_y': 0.25}
            on_value: root.mouse_vertical(self.value)
        Label:
            id: y_mouse_label
            pos_hint: {'center_x': 0.1, 'center_y': 0.3}
            color: app.theme['gui_text']

        X_slider:
            id: x_mouse_slider
            pos_hint: {'center_x': 0.1, 'center_y': 0.15}
            orientation: 'horizontal'
            on_value: root.mouse_horizontal(self.value)
        Label:
            id: x_mouse_label
            pos_hint: {'center_x': 0.1, 'center_y': 0.2}
            color: app.theme['gui_text']

        BoxLayout:
            size_hint: (0.15, 0.05)
            pos_hint: {'center_x': 0.1, 'center_y': 0.1}
            CustomToggleButton:
                id: mouse_left_toggle_on
                text: 'ON'
                group: 'mouse-right'
                on_release: root.mouse_on()
            CustomToggleButton:
                id: mouse_left_toggle_off
                text: 'OFF'
                group: 'mouse-right'
                on_release: root.mouse_off()







