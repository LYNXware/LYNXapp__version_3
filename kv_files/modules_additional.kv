<GyroscopeLeft>:
    FloatLayout:
        size: root.size
        pos: root.pos
        BackgroundGyro:
            pos_hint: {'center_x': 0.134, 'center_y': 0.17}

        DeviceButton:
            name: 'LGF'
            custom_pos_hint: 0.1, 0.275
        DeviceButton:
            name: 'LGB'
            custom_pos_hint: 0.1, 0.13
        DeviceButton:
            name: 'LGL'
            custom_pos_hint: 0.05, 0.2
        DeviceButton:
            name: 'LGR'
            custom_pos_hint: 0.15, 0.2

        BoxLayout:
            size_hint: (0.04, 0.2)
            pos_hint: {'center_x': 0.22, 'center_y': 0.2}
            orientation: 'vertical'
            GUI_Button:
                id: gyro_left_mouse_on_off
                text: 'on/off'
                on_release: root.gyro_mouse_on_off()
            GUI_Button:
                id: gyro_left_flip_x
                text: 'flip X'
                on_release: root.gyro_flip_x()
            GUI_Button:
                id: gyro_left_flip_y
                text: 'flip Y'
                on_release: root.gyro_flip_y()
            BoxLayout:
                Label:
                    text: 'SF'
                    color: app.theme['gui_text']
                CustomTextInput:
                    id: gyro_left_speed
                    text: 'ee'
                    multiline: False
                    on_text_validate: root.gyro_set_speed(self.text)

        BoxLayout:
            size_hint: (0.22, 0.05)
            pos_hint: {'center_x': 0.13, 'center_y': 0.055}
            GUI_Button:
                id: gyro_left_on_off
                text: 'always ON'
                on_release: root.gyro_on_off()

            GUI_Button:
                text: 'absolute/relative'
                id: gyro_left_absolute_relative
                on_release: root.gyro_absolute_relative()

            BoxLayout:
                Label:
                    text: 'DZ'
                    color: app.theme['gui_text']
                CustomTextInput:
                    id: gyro_left_deadzone
                    text: 'ee'
                    multiline: False
                    on_text_validate: root.gyro_set_deadzone(self.text)






